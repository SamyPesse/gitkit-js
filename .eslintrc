{
    "rules": {
        "indent": [ 2, 4 ],
        "quotes": [ 2, "single" ],
        "linebreak-style": [ 2, "unix" ],
        "semi": [ 2, "always" ],
        "no-unused-vars": [ 2, {
            "vars": "all",
            "args": "none"
        } ],
        "spaced-comment": [ 2, "always" ],
        "react/jsx-uses-vars": 2,
        "react/jsx-uses-react": 2,
        "react/react-in-jsx-scope": 2
    },
    "env": {
        "node": true,
        "mocha": true,
        "browser": true,
        "jasmine": true
    },
    "globals": {
        "fixtures": true
    },
    "plugins": [
        "react"
    ],
    "extends": "eslint:recommended"
}